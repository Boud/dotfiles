[user]
	name = Felix Yadomi
	email = felix.yadomi@gmail.com
	signingkey = 9533883DC05E238E
[core]
	excludesfile = ~/dotfiles/gitignore
	editor = vim
	pager = less
	autocrlf = input
	whitespace = cr-at-eol
[alias]
	# Enchenhancement
	lg = log --abbrev-commit --pretty=tformat:'%Cred%h%Creset %Cblue%G?%Creset %C(yellow)%an%Creset %C(green)%ad%Creset %s %C(auto)%d%Creset%C(bold blue) (%ar) %Creset' --date=short
	cp = cherry-pick
	grep = grep --break --heading --line-number

	# Features
	ignore = "!gi() { curl -L -s https://www.gitignore.io/api/$@ ;}; gi"
	undo="reset --soft HEAD^"
	recent = for-each-ref --count=50 --sort=-committerdate refs/heads/ --format="%(refname:short)"
	wip = "!wip() { git commit -am WIP --no-verify --no-gpg-sign ;}; wip"

	# Typos
	comit='commit'
	comi='commit'
	chekcout='checkout'
	chekout='checkout'
	pish='push'
	posh='push'
	poush='push'
	rest='reset'

[color]
	diff = auto
	status = auto
	branch = auto

[push]
	default = simple

[status]
	showUntrackedFiles = all

[color "branch"]
	upstream = cyan

[help]
	autocorrect = 1

[rerere]
	enabled = true

[gpg]
	program = gpg

[grep]
	extendedRegexp = true

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
