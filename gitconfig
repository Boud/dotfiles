[user]
	name = Felix Yadomi
	email = dev.yadomi@gmail.com
[core]
	excludesfile = /Users/yadomi/.dotfiles/gitignore
	editor = subl -w -n
	pager = less
	autocrlf = input
	whitespace = cr-at-eol
[alias]

	# Enchenhancement
	lg = log --abbrev-commit --pretty=tformat:'%Cred%h%Creset %C(yellow)%an%Creset %C(green)%ad%Creset %s %C(auto)%d%Creset%C(bold blue) (%ar) %Creset' --date=short
  cp = cherry-pick
  diff = "!git diff --color $@ | diff-so-fancy"

	# Features
	jah = log --abbrev-commit --pretty=tformat:'%Cred%h%Creset %C(yellow)%an%Creset %C(green)%ad%Creset %s %C(auto)%d%Creset%C(bold blue) (%ar) %Creset' --date=short
	ignore = "!gi() { curl -L -s https://www.gitignore.io/api/$@ ;}; gi"
	undo="reset --soft HEAD^"
	pr="!pr() { hub pull-request $@ ;}; pr"
	amend= 'commit --amend'
	when-merged='git-when-merged'
	oldest-ancestor = !zsh -c 'diff -u <(git rev-list --first-parent \"${1:-master}\") <(git rev-list --first-parent \"${2:-HEAD}\") | sed -ne \"s/^ //p\" | head -1' -
  hotfix = "!hf() { git checkout preprod && git pull && git branch -d hotfix/$@ && git checkout -b hotfix/$@ ; }; hf"

  # TYPOS
  comit='commit'
  comi='commit'
  chekcout='checkout'
  chekout='checkout'
  pish='push'
  posh='push'
  poush='push'
  rest='reset'

[color]
	diff = auto
	status = auto
	branch = auto
[push]
	default = simple
[status]
	showUntrackedFiles = all
[color "branch"]
	upstream = cyan
[init]
	templatedir = /Users/yadomi/.git-templates
[help]
	autocorrect = 1
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
