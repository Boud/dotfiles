# Pushbullet
function pushbullet() {
  MESSAGE=$(cat)
  curl -u $(cat ~/.pushbullet_apikey): \
    -X POST https://api.pushbullet.com/v2/pushes \
    --header 'Content-Type: application/json' \
    --data-binary '{"type": "note", "title": "Terminal", "body": "'"$MESSAGE"'"}'
}

